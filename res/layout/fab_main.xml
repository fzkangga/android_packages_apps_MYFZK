<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fl_interceptor"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/fzk_fab_overlay_bg"
    tools:context="in.city.bytes.view.MainActivity">

<my.fzk.fab.FloatingActionsMenu
    android:id="@+id/fab_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right|bottom"
    fab:fab_addButtonColorNormal="@color/fzk_fab_bg"
    fab:fab_addButtonPlusIconColor="@color/fzk_fab_button_icon_color"
    fab:fab_addButtonStrokeVisible="false"
    fab:fab_labelStyle="@style/menu_labels_style"
    fab:fab_labelsPosition="left">

    <my.fzk.fab.FloatingActionButton
        android:id="@+id/fab_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="@color/fzk_fab_bg"
        fab:fab_plusIconColor="@color/fzk_fab_button_icon_color"
        fab:fab_icon="@drawable/fzk_reset_icon"
        fab:fab_size="mini"
        fab:fab_title="@string/fab_reset" />

    <my.fzk.fab.FloatingActionButton
        android:id="@+id/fab_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="@color/fzk_fab_bg"
        fab:fab_plusIconColor="@color/fzk_fab_button_icon_color"
        fab:fab_icon="@drawable/fzk_info_icon"
        fab:fab_size="mini"
        fab:fab_title="@string/fab_about" />

    <my.fzk.fab.FloatingActionButton
        android:id="@+id/fab_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="@color/fzk_fab_bg"
        fab:fab_plusIconColor="@color/fzk_fab_button_icon_color"
        fab:fab_icon="@drawable/fzk_tools_fab_toggle"
        fab:fab_size="mini"
        fab:fab_title="@string/fab_layout" />

</my.fzk.fab.FloatingActionsMenu>

</FrameLayout>

